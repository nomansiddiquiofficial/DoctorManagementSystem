@model DocManagementSystem.Common.Models.Entities.Patient

@{
    ViewData["Title"] = "Add Patient";
}

<h2>Add New Patient</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Patient Name</label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" type="number" class="form-control" required />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label">Gender</label>
        <select asp-for="Gender" class="form-select" required>
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MedicalHistory" class="form-label">Medical History</label>
        <textarea asp-for="MedicalHistory" class="form-control" rows="3"></textarea>
    </div>
    <!-- Add more fields like Address, Phone, etc. -->
    <button type="submit" class="btn btn-primary">Add Patient</button>
</form>