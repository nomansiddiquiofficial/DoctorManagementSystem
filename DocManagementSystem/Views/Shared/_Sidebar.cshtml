@{
    // Assuming ASP.NET Core Identity for roles. Adjust if using custom auth.
}

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <i class="fas fa-hospital"></i>
            <span>MedixPro</span>
        </div>
    </div>
    <div class="nav-items">
        <!-- Dashboards (Role-Based) -->
        <div class="nav-group-header">Dashboards</div>
        @if (User.IsInRole("SuperAdmin"))
        {
            <div class="nav-item active" data-section="super-admin-dashboard">
                <i class="fas fa-user-shield"></i> Super Admin Dashboard
            </div>
        }
        @if (User.IsInRole("Doctor"))
        {
            <div class="nav-item" data-section="doctor-dashboard">
                <i class="fas fa-user-md"></i> Doctor Dashboard
            </div>
        }

        <!-- Super Admin Features -->
        @if (User.IsInRole("SuperAdmin"))
        {
            <div class="nav-group-header">Admin Management</div>
            <div class="nav-item" asp-controller="SuperAdmin" asp-action="CreateDoctor">
                <i class="fas fa-users"></i> Create Doctor Account
            </div>
        }

        <!-- Doctor Features -->
        @if (User.IsInRole("Doctor"))
        {
            <div class="nav-group-header">Patient Management</div>
            <div class="nav-item" asp-controller="Patients" asp-action="Create">
                <i class="fas fa-user-injured"></i> Add Patient
            </div>

            <div class="nav-group-header">Clinical Support</div>
            <div class="nav-item" asp-controller="Prescriptions" asp-action="Create">
                <i class="fas fa-prescription-bottle-alt"></i> Add Prescription
            </div>
            <div class="nav-item" asp-controller="Inventory" asp-action="Create">
                <i class="fas fa-boxes"></i> Add Inventory
            </div>
        }
    </div>
</div>